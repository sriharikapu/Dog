		<div class="row">
			<div class="col-md-4">
				<div class="prof-left v-center">
					<div class="ico-profile">
                                <i class="icon icon-wrapper fa fa-user" aria-hidden="true"></i>
                                <div class="user-name-wrap">
                                	                                User Name
                                </div>
                            </div>
				

						<ul class="list-item">
							<li class="item">
								Add Research
							</li>
							<li class="item">
								Research List
							</li>
						</ul>

						<span id="make-donation" class="bc-btn bc-btn-primary">Make a donation</span>

					</div>
	

